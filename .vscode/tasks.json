{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
            "command": "g++.exe",
            "args": [
				"src/4arithmetic.cpp",
				"build/liblog4cppD.a",
				"build/lib4arithmaticD.a",
				"-o", "main.exe",
				"-Iinclude/",
				"-g",
				"-Wall",
				"-std=c++17",
			],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
		}
	]
}