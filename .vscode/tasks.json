{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
            "command": "g++.exe",
            "args": [
				"${workspaceFolder}/4arithmeticTest/FractionTest.cpp",
				"${workspaceFolder}/lib/Debug/Win32/liblog4cppD.a",
				"${workspaceFolder}/lib/Debug/Win32/gtest-md.lib",
				"${workspaceFolder}/build/lib4arithmaticD.a",
				"-o ${workspaceFolder}/main.exe",
				"-I${workspaceFolder}/include",
				"-g",
				"-Wall",
				"-std=c++17",
			],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
		}
	]
}